<!DOCTYPE html>
{{>nav}}
<div class="labs-main">
    <div class="main-title">
        <h1>{{title}}</h1>
    </div>
    <div class="left-panel">
        <button class="arrow-btn" id="left-btn">
            <img class="arrow" src="https://img.icons8.com/?size=100&id=40217&format=png&color=CFCFCF" alt="">
        </button>
    </div>
    <div class="right-panel">
        <button class="arrow-btn" id="right-btn">
            <img class="arrow" src="https://img.icons8.com/?size=100&id=7849&format=png&color=CFCFCF">
        </button>
    </div>
   <div class="main-panel">
        <div class="slide-container">
            {{#each labs_list}}
            <div class="card-wrapper">
                <div class="card">
                    <div class="image-content">
                        <span class="overlay">
                            <div class="card-image">
                                <img src="{{img-link}}" alt="" class="card-img">
                            </div>
                        </span>
                    </div>
                    <div class="card-content">
                        <h2 class="name">{{name}} ({{loc}})</h2>
                        <p class="description">{{description}}</p></div>
                        <button class="viewslots"><a href="/id/{{id}}/{{name}}/{{loc}}">View Slots</a></button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
